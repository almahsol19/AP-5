using System;

namespace Activity1Led
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine
            ("Enter 1 to turn red Enter 0 to turn green: ");
            int num = Convert.ToInt32(Console.ReadLine());

            if (num == 1)
            {
                Console.WriteLine("Green");
            }
            else if (num == 0)
            {
                Console.WriteLine("Red");
            }
            else
            {
                Console.WriteLine("Error");
            }
        }
    }
}
