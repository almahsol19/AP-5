            }
        }
        cout << endl;
    }
}

//display the letters that has been converted to stars
void displayAsStars(char letters, int offset) {
  
    switch(letters) {
        case 'A': A(offset); break;
        case 'B': B(offset); break;
        case 'C': C(offset); break;
        case 'D': D(offset); break;
        case 'E': E(offset); break;
        case 'F': F(offset); break;
        case 'G': G(offset); break;
        case 'H': H(offset); break;
        case 'I': I(offset); break;
        case 'J': J(offset); break;
        case 'K': K(offset); break;
        case 'L': L(offset); break;
        case 'M': M(offset); break;
        case 'N': N(offset); break;
        case 'O': O(offset); break;
        case 'P': P(offset); break;
        case 'Q': Q(offset); break;
        case 'R': R(offset); break;
        case 'S': S(offset); break;
        case 'T': T(offset); break;
        case 'U': U(offset); break;
        case 'V': V(offset); break;
        case 'W': W(offset); break;
        case 'X': X(offset); break;
        case 'Y': Y(offset); break;
        case 'Z': Z(offset); break;
        default: break;
    }
  
}

//check if the input is an alphabet
bool isValidName(const string& name) {
    for (char alphabet : name) {
        if (!isalpha(alphabet)) {
            return false;
        }
    }
    return true;
}

int main() {
    string name;
    
    cout << "Enter Name: "; // user input
    cin >> name;

    int n = name.length(); //number of characters in the inputted string name
    
    // Convert the name to uppercase
    for (int i = 0; i < n; i++) {
        name[i] = toupper(name[i]);
    }

    char nameArr[n + 1]; //character array nameArr to store each characters in string name
    strcpy(nameArr, name.c_str()); //copy the contents of the string name into the character array nameArr
    
    //call isValidName function
    if (!isValidName(name)) {
        cout << "Invalid input.";
    }
    
    cout << "\n"; //display in the next line
    
    //call displayAsStars function
    for (int i = 0; i < n; i++) {
        displayAsStars(nameArr[i], i * 6); // Adjusting offset for diagonal display
    }

    return 0;
}
