void K(int offset){
    for (int i = 0; i < 5; i++) {
        cout << string(offset, ' ');
        for (int j = 0; j < 5; j++) {
            if (j == 0 || j == 4 - i && i <= 2 || i == j && i >= 2) {
                cout << "*";
            } else {
                cout << " ";
            }
        }
        cout << endl;
    }
}

void L(int offset){
