#include <iostream>
#include <cstring>
using namespace std;

//Each letter in the Alphabet has a corresponding function that converts the letter to stars and then display
void A(int offset) {
    for (int i = 0; i < 5; i++) {
        cout << string(offset, ' ');
        for (int j = 0; j < 5; j++) {
            if (i == 0 || i == 2 || j == 0 || j == 4) {
                cout << "*";
            } else {
                cout << " ";
            }
        }
        cout << endl;
    }
}

void B(int offset){
    for (int i = 0; i < 5; i++) {
        cout << string(offset, ' ');
        for (int j = 0; j < 5; j++) {
            if (i == 0 || i == 4 || j == 0 || j == 4 || i == 2) {
                if (i != j){
                    cout << "*";
                }
            } else {
                cout << " ";
            }
        }
        cout << endl;
    }
}

void C(int offset){
    for (int i = 0; i < 5; i++) {
