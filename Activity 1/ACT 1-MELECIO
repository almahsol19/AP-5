#include <iostream>
using namespace std;

int main(void)
{   
    int num;

    cout << "\"0\" to Red, \"1\" to Green, \"-1\" to Exit" << endl; 

    while (true) {
        cout << "Enter a number: "; 
        cin >> num;
        
        if (num == -1) {
            cout << "Exiting program." << endl;
            break;
        }

        if (num == 0)
            cout << "RED" << endl;  
        else if (num == 1)
            cout << "GREEN" << endl; 
        else 
            cout << "Invalid input" << endl;
    }

    return 0;
}
