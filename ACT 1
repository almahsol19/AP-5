
using System;

class Program {
  static void Main(string[] args) {
    while (true) {
      Console.WriteLine("Enter 1 to turn on, 0 to turn off, q to quit :");
      string input = Console.ReadLine();

      if (input == "1") {
        Console.WriteLine("Simulated: Green LED ON (H)");
      } else if (input == "0") {
        Console.WriteLine("Simulated: Red LED ON (L)");
      } else if (input == "q") {
        break;
      } else {
        Console.WriteLine("Invalid input. Please try again.");
      }
    }
  }
}

